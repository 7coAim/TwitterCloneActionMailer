<%= form_with(model: contact, local: true) do |form| %>

<% if contact.errors.any? %>
<div class="alert alert-danger alert-dismissible" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="閉じる">
    <span aria-hidden="true">×</span></button>
  <strong><%= contact.errors.count %>件のエラーがあります。ご確認ください。</strong>
  <ul>
    <% contact.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<% if logged_in? %>

<div class="alert alert-info alert-dismissible" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="閉じる">
    <span aria-hidden="true">×</span></button>
    <%= current_user.name %>さんからのお問い合わせを受け付けます
</div>

<% else %>

<div class="input-group input-group-lg">
  <span class="input-group-addon sign-up">名前</span>
  <%= form.text_field :name, id: :contact_email, class: 'form-control', placeholder: "テスト太郎" %>
</div>
<br>
<div class="input-group input-group-lg">
  <span class="input-group-addon sign-up">メールアドレス</span>
  <%= form.email_field :email, id: :contact_email, class: 'form-control', placeholder: "test@sample.com" %>
</div>
<br>

<% end %>

<div class="new_twtext_area input-group input-group-lg">
  <span class="input-group-addon">お問い合わせ内容</span>
  <%= form.text_area :content, class: 'form-control', placeholder: "ここに1000文字以内で入力してください" %>
</div>

<div class="pull-right">
  <%= form.submit "送信する", class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
